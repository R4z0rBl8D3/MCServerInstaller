<Window x:Class="MCServerInstaller.ImportCurseForgeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCServerInstaller"
        mc:Ignorable="d"
        Title="Import from Curseforge" Height="250" Width="350">
    <Grid>
        <Label Content="Curseforge" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <ListBox x:Name="PackListBox" HorizontalAlignment="Left" Height="123" Margin="0,37,0,0" VerticalAlignment="Top" Width="332"/>
        <Button x:Name="ImportBtn" Content="Import" HorizontalAlignment="Left" Margin="258,17,0,0" VerticalAlignment="Top" Width="74" Click="ImportBtn_Click"/>
        <Label Content="Curseforge minecraft directory" HorizontalAlignment="Left" Margin="0,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DirBox" HorizontalAlignment="Left" Height="23" Margin="0,186,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="332"/>
        <Button x:Name="CopyEBtn" Content="Copy everything" HorizontalAlignment="Left" Margin="168,17,0,0" VerticalAlignment="Top" Width="90" Click="CopyEBtn_Click"/>

    </Grid>
</Window>
